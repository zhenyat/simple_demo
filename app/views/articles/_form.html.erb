<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= simple_form_for(@article, html: {multipart: true}) do |f| %>
        <%= f.error_notification message: t('messages.error_notification') %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.label :content %>
          <%= f.rich_text_area :content %>
        </div>
        </br>
        <div class="form_actions">
          <div class="row">
            <div class="col-md-3">
              <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
            </div>
            <div class="col-md-3">
              <%= link_to "To List", articles_path, class: 'btn btn-info btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>